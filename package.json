{
  "name": "course-planner",
  "version": "1.0.0",
  "description": "An intelligent CLI tool for managing and pacing video-based courseware",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pacer": "./dist/bin/pacer.js"
  },
  "scripts": {
    "dev": "tsx watch bin/pacer.ts",
    "build": "tsc",
    "start": "node dist/bin/pacer.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src bin tests --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"bin/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "course",
    "video",
    "learning",
    "productivity",
    "cli",
    "education"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "date-fns": "^3.0.0",
    "ffprobe-static": "^3.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "inquirer": "^9.2.12",
    "lowdb": "^7.0.1",
    "ora": "^7.0.1",
    "table": "^6.9.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/coverage-v8": "^1.1.1",
    "@vitest/ui": "^1.1.1",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.1"
  }
}
